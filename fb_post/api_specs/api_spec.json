{
  "swagger": "2.0",
  "host": "localhost:8000",
  "basePath": "/api/fb_post/",
  "info": {
    "version": "1.0.0",
    "title": "Simple API",
    "description": "A simple API to learn how to write OpenAPI Specification"
  },
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users"
      },
      "type": "oauth2"
    }
  },
  "security": [],
  "definitions": {
    "PostDetails": {
      "type": "object",
      "properties": {
        "post_id": {
          "type": "integer",
          "format": "int64"
        },
        "content": {
          "type": "string"
        },
        "posted_by": {
          "type": "integer"
        }
      },
      "required": [
        "content",
        "posted_by"
      ]
    },
    "PostId": {
      "type": "object",
      "properties": {
        "post_id": {
          "type": "integer",
          "format": "int64"
        }
      },
      "required": [
        "post_id"
      ]
    },
    "PostResponseDetails": {
      "type": "object",
      "properties": {
        "post_id": {
          "type": "integer",
          "format": "int64"
        }
      },
      "required": [
        "post_id"
      ]
    },
    "CreatePostFailure": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        },
        "res_status": {
          "type": "string",
          "enum": [
            "INVALID_USER_ID"
          ]
        }
      }
      },
      "GetPostFailure": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          },
          "http_status_code": {
            "type": "integer"
          },
          "res_status": {
            "type": "string",
            "enum": [
              "INVALID_POST_ID"
            ]
          }
        },
        "required": [
          "response",
          "http_status_code",
          "res_status"
        ]
      },
      "UserDetails": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "user_id": {
            "type": "integer",
            "format": "int64"
          },
          "profile_pic": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "user_id",
          "profile_pic"
        ]
      },
      "ReactionsDetails": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "format": "int64"
          },
          "type": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "count",
          "type"
        ]
      },
      "CommentsDetails": {
        "type": "object",
        "properties": {
          "comment_id": {
            "type": "integer",
            "format": "int64"
          },
          "commenter": {
            "$ref": "#/definitions/UserDetails"
          },
          "commented_at": {
            "type": "string"
          },
          "comment_content": {
            "type": "string"
          },
          "reactions": {
            "$ref": "#/definitions/ReactionsDetails"
          }
        },
        "required": [
          "comment_id",
          "commenter",
          "commented_at",
          "comment_content",
          "reactions"
        ]
      },
    "GetPostDetails": {

        "type": "object",
        "properties": {
          "post_id": {
            "type": "integer",
            "format": "int64"
          },
          "posted_by": {
            "$ref": "#/definitions/UserDetails"
          },
          "posted_at": {
            "type": "string"
          },
          "post_content": {
            "type": "string"
          },
          "reactions": {
            "$ref": "#/definitions/ReactionsDetails"
          },
          "comments": {
            "type": "array",
            "items": {

              "allOf": [
                {
                  "$ref": "#/definitions/CommentsDetails"
                },
                {
                  "type": "object",
                  "properties": {
                    "replies_count": {
                      "type": "integer",
                      "format": "int64"
                    }
                  }
                },
                {
                  "type": "object",
                  "properties": {
                    "replies": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/CommentsDetails"
                      }
                    }
                  }
                }
              ]
            }
          },
          "comments_count": {
            "type": "integer",
            "format": "int64"
          }
        },
      "required": [
        "post_id",
        "posted_by",
        "posted_at",
        "post_content"
      ]
    }
  },

  "parameters": {
    "CreatePost": {
      "description": "Post to create",
      "name": "PostDetails",
      "in": "body",
      "required": true,
      "schema": {
        "$ref": "#/definitions/PostDetails"
      }
    }
  },
  "responses": {
    "CreatePostSuccessResponse": {
      "description": "Object created",
      "schema": {
        "$ref": "#/definitions/PostResponseDetails"
      }
    },
    "CreatePostFailureResponse": {
      "description": "Not Found",
      "schema": {
        "$ref": "#/definitions/CreatePostFailure"
      }
    },
    "GetPostFailureResponse": {
      "description": "Not Found",
      "schema": {
        "$ref": "#/definitions/GetPostFailure"
      }
    },
    "GetPostSuccessResponseDetails": {
      "description": "Get Post Details",
      "schema": {
        "$ref": "#/definitions/GetPostDetails"
      }
    }
  },
  "paths": {
    "/create/": {
      "post": {
        "operationId": "create_post",
        "summary": "Creates New Post",
        "description": "Creates a new Post and returns the Post id.",
        "parameters": [
          {
            "$ref": "#/parameters/CreatePost"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/CreatePostSuccessResponse"
          },
          "400": {
            "$ref": "#/responses/CreatePostFailureResponse"
          }
        }
      }
    },
    "/get_post/{post_id}": {
      "get": {
        "operationId": "get_post",
        "summary": "Gets Post Details",
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "required": true,
            "description": "Post Id",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetPostSuccessResponseDetails"
          },
          "400": {
            "$ref": "#/responses/GetPostFailureResponse"
          }
        }
      }
    }
  }
}





